@model List<Cliente>

<table class="table table-striped table-hover">
    @if (Model != null)
    {
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>email</th>
            <th></th>
        </tr>
        
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdCliente</td>
                <td>@p.Nome</td>
                <td>@p.Email</td>
                <td>
                    <a class="btn btn-sm btn-success" href="/Cliente/Update/@p.IdCliente">Editar</a>
                    <a class="btn btn-sm btn-warning" href="/Cliente/Delete/@p.IdCliente">Apagar</a>
                </td>
            </tr>
        }
    }
    else
    {
    <tr>
        <td> VOLTOU NULL </td>
    </tr>
    }

    </table>

<a class="btn btn-primary" href="/Cliente/Create">Adicionar</a>